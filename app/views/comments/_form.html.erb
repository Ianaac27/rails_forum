<%= form_for([@post,@post.comments.build]) do |f| %>
    <p>
        <%= f.text_area :body, placeholder: "Comment here...",  rows: '5', class: "form-control" %>
    </p>
     <div class="field form-group">
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    </div>
    <p>
        <%= f.number_field :user_id, id: :comment_user_id, value: current_user.id, class: "form-control", type: :hidden %>
    </p>
    <p>
        <%= f.text_field :username, value: current_user.username, class: "form-control", type: :hidden%>
    </p>
    <br>
    <div class= "d-flex flex-row justify-content-end">
        <%= f.submit class: "btn btn-secondary btn-sm" %>
    </div>
<% end %>

