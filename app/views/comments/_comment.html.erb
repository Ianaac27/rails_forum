<div class="card mb-3">
  
  <div class="card-body">
    <p class="card-title"><%= comment.body %></p>
    <div class="d-flex flex-column"> 
      <div class= "d-flex flex-row justify-content-end">

        <% if user_signed_in? %>
            <% if comment.username == current_user.username %>
                <div> 
                  <%= link_to "Edit", edit_post_comment_path(@post, comment), action: :update, class: "btn btn-outline-info btn-sm" %> 
                </div>
            <% else %>
              <div></div>
            <% end %>
        <% end %>

      </div>
    </div>
  </div>

<div class="d-flex justify-content-between ml-3 mr-3">
    <p><em>Posted: <%= time_ago_in_words(comment.created_at) %></em> </p>
    <p><em>Author: <%= comment.username%></em> </p>
  </div>

</div>