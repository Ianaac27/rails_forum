<div class="jumbotron">
  <h1 class="display-4 text-center">Editing Post</h1>
</div>

<%= render 'form', post: @post %>

<div class="mr-5">
  <div class= "d-flex flex-row justify-content-end mt-2">
    <div > 
        <%= link_to 'Back', posts_path, class: "btn btn-dark" %>
    </div>
    <div class="ml-2">
         <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
