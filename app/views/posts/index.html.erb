<div class="jumbotron">
  <h1 class="display-4 text-center">Posts</h1>
</div>

<%= form_tag(posts_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
  <%= submit_tag "Search" %>
<% end %>

<div class="d-flex justify-content-center">
  <table class="table table-dark table-hover w-50">
    <thead>
      <tr>
        <th scope="col">Content</th>
        <th scope="col">Author</th>
        <th scope="col"></th>
      </tr>
    </thead>

<%# Create a card instead %>
    <tbody>
      <% @posts.each do |post| %>
        <tr class="post-card mt-2">
          <td scope="row"><%= post.content %></td>
          <td scope="row"><%= post.username %></td>
          <td><%= link_to 'Show', post, class: "btn btn-secondary btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>  

<br>

