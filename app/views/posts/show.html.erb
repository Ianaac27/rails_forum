<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1 class="display-4 text-center"><%= @post.title %></h1>
</div>

<%# Need to have place for author %>
<%# Place content in a card %>
<p class="ml-5">
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<br><br>

<div class="d-flex flex-column"> 
  <div class= "d-flex flex-row justify-content-end">
    <div>
      <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-secondary" %>
    </div>
    <div class="ml-2"> 
      <%= link_to 'Back', posts_path, class: "btn btn-dark" %>
    </div>
  </div>
  <div class="mt-2 d-flex mr-4 justify-content-end"> 
    <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>
</div>