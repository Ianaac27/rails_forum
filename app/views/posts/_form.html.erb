<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class= "ml-5 mr-5"> 

    <div class="field form-group">
      <label>Subject</label><br>
      <%= form.text_field :title, placeholder: "Write your question...", class: "form-control"  %>
    </div>

    <div class="field form-group">
      <%= form.label :content %><br>
      <%= form.text_area :content, placeholder: "Give context behind your question...",  rows: '5', class: "form-control" %>
    </div>

     <div class="field form-group">
      <%= form.label :image %><br>
      <%= form.file_field :image %>
    </div>
 
    <div class="field form-group">
      <%= form.number_field :user_id, id: :post_user_id, value: current_user.id, class: "form-control", type: :hidden %>
    </div>

    <div class="field form-group">
      <%= form.text_field :username, value: current_user.username, class: "form-control", type: :hidden %>
    </div>
  </div>

<div class= "d-flex flex-row justify-content-end mr-5">
  <div class="actions">
    <%= form.submit class: "btn btn-secondary" %>
    <% @post.image.purge%>
  </div>
</div>
<% end %>
